@model Step_MVC.ViewModels.EmployeeDepartmentDetailsViewModel
<h1>List of Employees</h1>

@Html.ActionLink("Add new Employee", "Create")
<table>
@foreach (var item in Model.Employees)
{
    <tr>
        <td>@Html.DisplayFor(ModelItem => item.Name)</td>

        <td>@Html.DisplayFor(ModelItem => item.DepartmentName)</td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { employeeId = item.EmployeeId}) |
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { employeeId = item.EmployeeId })
        </td>
    </tr>
}
</table>

